<Page
    x:Class="SCU.UWP.Views.Inicio.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SCU.UWP.Views.Inicio"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Image Source="../../Assets/Img/background.png" Stretch="Uniform" Grid.Row="0" Grid.RowSpan="3"/>

        <NavigationView>
            
            <NavigationView.MenuItems>
                <NavigationViewItem IsSelected="False" >
                    <Image Source="../../Assets/Img/LogoOple.png" VerticalAlignment="Center"/>
                </NavigationViewItem>
                <NavigationViewItem Icon="Home" Content="Inicio" IsSelected="False"/>
                <NavigationViewItem Icon="Home" Content="Casillas"/>
                <NavigationViewItem Icon="Home" Content="Partidos"/>
                <NavigationViewItem Icon="Home" Content="Elecciones"/>
                <NavigationViewItem Icon="Home" Content="Ajustes"/>
            </NavigationView.MenuItems>
        </NavigationView>
    </Grid>
</Page>
